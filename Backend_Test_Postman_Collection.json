{
  "info": {
    "name": "Backend Test - Clientes API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colecci\u00f3n Postman para probar el microservicio Flask de integraci\u00f3n con API externa"
  },
  "item": [
    {
      "name": "POST - Crear Cliente",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/clientes",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "clientes"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Juan P\\u00e9rez\",\n  \"email\": \"juan.perez@email.com\"\n}"
        }
      }
    },
    {
      "name": "GET - Obtener Cliente por ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/clientes/1",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "clientes",
            "1"
          ]
        }
      }
    },
    {
      "name": "PUT - Actualizar Cliente",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/clientes/1",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "clientes",
            "1"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Juan P\\u00e9rez Actualizado\",\n  \"email\": \"juan.actualizado@email.com\"\n}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ]
}